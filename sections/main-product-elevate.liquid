                <h2 class="tw-mt-7 tw-font-gotham-light tw-uppercase tw-text-xs tw-leading-[18px]">
                  {{ block.settings.title }}
                </h2>
                <div class="tw-mt-[6px] tw-flex tw-items-center tw-gap-[25px]">

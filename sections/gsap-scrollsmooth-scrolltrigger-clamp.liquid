</script>

{% style %}
  .section-{{ section.id }} .pin-spacer {
    pointer-events: none;
  }

  :root {
    --f-5-min: 30;
  	--f-5-max: 120;
  	--step-5: calc(
  		((var(--f-5-min) / 16) * 1rem) + (var(--f-5-max) - var(--f-5-min)) *
  			var(--fluid-bp));
  }


  .section-{{ section.id }} button {
    cursor: pointer;
  }

  .section-{{ section.id }} button:hover {
    background: var(--purple);
    background-image: none;
  }

  .section-{{ section.id }} .hero {
    min-height: 100vh;
  }


  .section-{{ section.id }} h1 {
    font-family: 'Unbounded', sans-serif;
    position: relative;
    font-size: var(--step-5);
    text-transform: uppercase;
    text-align: center;
    color: white;
  }

  .section-{{ section.id }} .images {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    align-items: stretch;
    justify-items: center;
    margin-top: 2rem;
  }

  .section-{{ section.id }} img {
    max-width: 100%;
    height: 60vh;
    object-fit: cover;
  }

  .section-{{ section.id }} .spacer {
    height: 100vh
  }

  .section-{{ section.id }} .clamp {
    position: relative;
    z-index: -1
  }
  .section-{{ section.id }} .yt {
    z-index: 3
  }

  .section-{{ section.id }} .clamp svg {
    position: absolute;
    width: 112%;
    top: 0;
    top: 50%;
    transform: translateY(-50%) rotate(2deg);
    left: -6%;
  }

  .section-{{ section.id }} .heading {
    position: relative;
    z-index: 2;
    mix-blend-mode: difference;
     perspective:1000px;
      -webkit-backface-visibility: visible;
      backface-visibility: visible;
  transform: rotate(0.1deg);
  }
  .section-{{ section.id }} .images {
    z-index: -1
  }

  .section-{{ section.id }} .logo svg {
    opacity: 0
  }
{% endstyle %}

